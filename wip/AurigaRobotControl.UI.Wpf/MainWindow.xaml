<Window x:Class="AurigaRobotControl.UI.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AurigaRobotControl.UI.Wpf"
        mc:Ignorable="d"
        Title="Auriga Robot Control" Height="850" Width="1200" WindowStartupLocation="CenterScreen"
        KeyDown="MainWindow_KeyDown" KeyUp="MainWindow_KeyUp" Focusable="True">
    <Window.Resources>
        <Style x:Key="LedButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="EmergencyButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="Red"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style x:Key="DebugButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="250"/>
        </Grid.RowDefinitions>

        <!-- Connection Panel -->
        <Border Grid.Row="0" Background="LightGray" Padding="10" Margin="5">
            <StackPanel>
                <Label Content="Robot Connection" FontSize="16" FontWeight="Bold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0" Name="ConnectButton" Content="Connect" Width="100" Height="30" 
                            Margin="5" Click="ConnectButton_Click"/>
                    <TextBlock Grid.Column="1" Name="StatusTextBlock" Text="Disconnected" 
                               VerticalAlignment="Center" Margin="10,0" FontWeight="Bold"/>
                    <Button Grid.Column="2" Name="DisconnectButton" Content="Disconnect" Width="100" Height="30" 
                            Margin="5" Click="DisconnectButton_Click" IsEnabled="False"/>
                    
                    <!-- Debug Mode Toggle -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="10,0">
                        <CheckBox Name="DebugModeCheckBox" Content="Debug Mode" 
                                  VerticalAlignment="Center" Margin="5" 
                                  Checked="DebugModeCheckBox_Checked" 
                                  Unchecked="DebugModeCheckBox_Unchecked"/>
                        <Rectangle Width="15" Height="15" Name="DebugIndicator" 
                                   Fill="Gray" Margin="5" RadiusX="2" RadiusY="2"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Main Control Panel -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- LED Ring Control -->
            <Border Grid.Column="0" Background="White" Padding="10" Margin="5" BorderBrush="Gray" BorderThickness="1">
                <StackPanel>
                    <Label Content="RGB LED Ring Control" FontWeight="Bold" FontSize="14"/>
                    
                    <!-- LED Ring Visual Display -->
                    <Canvas Name="LedRingCanvas" Width="250" Height="250" Background="Black" Margin="10">
                        <!-- LEDs will be added programmatically -->
                    </Canvas>
                    
                    <!-- Global LED Controls -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                        <Label Content="All LEDs:" VerticalAlignment="Center"/>
                        <Button Content="Red" Background="Red" Foreground="White" Style="{StaticResource LedButtonStyle}" 
                                Click="SetAllLedsRed_Click"/>
                        <Button Content="Green" Background="Green" Foreground="White" Style="{StaticResource LedButtonStyle}" 
                                Click="SetAllLedsGreen_Click"/>
                        <Button Content="Blue" Background="Blue" Foreground="White" Style="{StaticResource LedButtonStyle}" 
                                Click="SetAllLedsBlue_Click"/>
                        <Button Content="Off" Background="Gray" Foreground="White" Style="{StaticResource LedButtonStyle}" 
                                Click="SetAllLedsOff_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Movement Controls -->
            <Border Grid.Column="1" Background="White" Padding="10" Margin="5" BorderBrush="Gray" BorderThickness="1">
                <StackPanel>
                    <Label Content="Robot Movement (WASD)" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                    
                    <!-- Movement Grid -->
                    <Grid HorizontalAlignment="Center" Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Forward -->
                        <Button Grid.Row="0" Grid.Column="1" Name="ForwardButton" Content="W " 
                                Style="{StaticResource ControlButtonStyle}"
                                MouseDown="ForwardButton_MouseDown" MouseUp="ForwardButton_MouseUp"/>
                        
                        <!-- Left, Stop, Right -->
                        <Button Grid.Row="1" Grid.Column="0" Name="LeftButton" Content="A " 
                                Style="{StaticResource ControlButtonStyle}"
                                MouseDown="LeftButton_MouseDown" MouseUp="LeftButton_MouseUp"/>
                        <Button Grid.Row="1" Grid.Column="1" Name="StopButton" Content="S " 
                                Style="{StaticResource ControlButtonStyle}" Click="StopButton_Click"/>
                        <Button Grid.Row="1" Grid.Column="2" Name="RightButton" Content="D " 
                                Style="{StaticResource ControlButtonStyle}"
                                MouseDown="RightButton_MouseDown" MouseUp="RightButton_MouseUp"/>
                        
                        <!-- Backward -->
                        <Button Grid.Row="2" Grid.Column="1" Name="BackwardButton" Content="S " 
                                Style="{StaticResource ControlButtonStyle}"
                                MouseDown="BackwardButton_MouseDown" MouseUp="BackwardButton_MouseUp"/>
                    </Grid>
                    
                    <!-- Emergency Stop -->
                    <Button Name="EmergencyStopButton" Content="EMERGENCY STOP" 
                            Style="{StaticResource EmergencyButtonStyle}" 
                            Click="EmergencyStopButton_Click" HorizontalAlignment="Center" Margin="20"/>
                </StackPanel>
            </Border>

            <!-- Command Sequences -->
            <Border Grid.Column="2" Background="White" Padding="10" Margin="5" BorderBrush="Gray" BorderThickness="1">
                <StackPanel>
                    <Label Content="Command Sequences" FontWeight="Bold" FontSize="14"/>
                    
                    <ComboBox Name="SequenceComboBox" Margin="5" Height="25"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                        <Button Content="Load" Width="70" Height="25" Margin="2" Click="LoadSequenceButton_Click"/>
                        <Button Content="Save" Width="70" Height="25" Margin="2" Click="SaveSequenceButton_Click"/>
                        <Button Content="Edit" Width="70" Height="25" Margin="2" Click="EditSequenceButton_Click"/>
                    </StackPanel>
                    
                    <Button Content="Run Sequence" Width="150" Height="30" Margin="5" 
                            Click="RunSequenceButton_Click" HorizontalAlignment="Center"/>
                    
                    <Separator Margin="5"/>
                    
                    <!-- Data Logging Controls -->
                    <Label Content="Data Logging" FontWeight="Bold"/>
                    <TextBox Name="LogFilePathTextBox" Margin="5" Height="25" IsReadOnly="True"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                        <Button Content="Browse" Width="70" Height="25" Margin="2" Click="BrowseLogFileButton_Click"/>
                        <Button Name="StartLoggingButton" Content="Start" Width="70" Height="25" Margin="2" 
                                Click="StartLoggingButton_Click"/>
                        <Button Name="StopLoggingButton" Content="Stop" Width="70" Height="25" Margin="2" 
                                Click="StopLoggingButton_Click" IsEnabled="False"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Enhanced Debug and Communication Log Panel -->
        <Border Grid.Row="2" Background="White" Padding="10" Margin="5" BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <!-- Log Display -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Log Header with Filters -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <Label Content="Communication Log" FontWeight="Bold"/>
                        <CheckBox Name="ShowTimestampsCheckBox" Content="Timestamps" Margin="10,0,0,0" 
                                  IsChecked="True" Checked="LogFilter_Changed" Unchecked="LogFilter_Changed"/>
                        <CheckBox Name="ShowRawDataCheckBox" Content="Raw Bytes" Margin="10,0,0,0" 
                                  IsChecked="True" Checked="LogFilter_Changed" Unchecked="LogFilter_Changed"/>
                        <CheckBox Name="ShowCommandsCheckBox" Content="Commands" Margin="10,0,0,0" 
                                  IsChecked="True" Checked="LogFilter_Changed" Unchecked="LogFilter_Changed"/>
                        <CheckBox Name="ShowErrorsCheckBox" Content="Errors" Margin="10,0,0,0" 
                                  IsChecked="True" Checked="LogFilter_Changed" Unchecked="LogFilter_Changed"/>
                    </StackPanel>
                    
                    <!-- Log Content -->
                    <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1">
                        <ScrollViewer Name="LogScrollViewer" VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Auto">
                            <TextBlock Name="LogTextBlock" FontFamily="Consolas" FontSize="11" 
                                       Margin="5" Background="Black" Foreground="Lime" 
                                       Padding="5" TextWrapping="NoWrap"/>
                        </ScrollViewer>
                    </Border>
                </Grid>

                <!-- Control Panel -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <Label Content="Debug Actions" FontWeight="Bold"/>
                    
                    <!-- Log Control Buttons -->
                    <Button Content="Clear Log" Style="{StaticResource DebugButtonStyle}" 
                            Click="ClearLogButton_Click"/>
                    <Button Content="Save Log" Style="{StaticResource DebugButtonStyle}" 
                            Click="SaveLogButton_Click"/>
                    <Button Content="Copy Log" Style="{StaticResource DebugButtonStyle}" 
                            Click="CopyLogButton_Click"/>
                    
                    <Separator Margin="5"/>
                    
                    <!-- Debug Test Commands -->
                    <Label Content="Test Commands" FontWeight="Bold" FontSize="11"/>
                    <Button Content="Test LED #1" Style="{StaticResource DebugButtonStyle}" 
                            Click="TestLed1Button_Click"/>
                    <Button Content="Test Movement" Style="{StaticResource DebugButtonStyle}" 
                            Click="TestMovementButton_Click"/>
                    <Button Content="Test Sequence" Style="{StaticResource DebugButtonStyle}" 
                            Click="TestSequenceButton_Click"/>
                    
                    <Separator Margin="5"/>
                    
                    <!-- Settings and Options -->
                    <CheckBox Name="AutoScrollCheckBox" Content="Auto-scroll" Margin="2" IsChecked="True"/>
                    <CheckBox Name="VerboseLoggingCheckBox" Content="Verbose mode" Margin="2"/>
                    <Button Content="Settings" Style="{StaticResource DebugButtonStyle}" 
                            Click="SettingsButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
